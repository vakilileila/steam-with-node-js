
<article class="content">
    <div class="row  containerBg">
        <div class="col-md-4">


            <form name="list hero" target="_blank" method="GET" onsubmit="">
                <label>hero:</label>
                <select class="select-dropdown" name="list hero"></select>

            </form>


        </div>
        <div class="col-md-4">
            <form name="list hero" target="_blank" method="GET" onsubmit="">
                <label>Rarity:</label>
                <select class="select-dropdown" name="list hero">
                    <option value="one">One</option>
                    <option value="two">Two</option>
                </select>

            </form>
        </div>
        <div class="col-md-4">
            <form name="list hero" target="_blank" method="GET" onsubmit="">
                <label>Sort by:</label>
                <select class="select-dropdown" name="list hero">
                    <option value="one">One</option>
                    <option value="two">Two</option>
                </select>

            </form>
        </div>


    </div>
    <div class="row">

        <div class="col-sm-6 col-md-4 paging">
            <form action="/category">

                <% if (paginate.hasPreviousPages || paginate.hasNextPages(pageCount)) { %>
                <div class="navigation well-sm" id="pagination"></div>
                <ul class="pager">
                    <% if (paginate.hasPreviousPages) { %>
                    <li class="previus">
                        <a href=
                           <% paginate.href(true).prev %>
                                >
                            <i class="fa fa-arrow-circle-left"></i>
                            | Previous
                        </a>
                    </li>
                    <% } %>
                    <% if(pages){ %>
                    <% pages.forEach(function(page){ %>
                    <a class="btn btn-default" href="<%= page.url = page.number %>"></a>

                    <% }); %>
                    <% }; %>
                    <% if (paginate.hasNextPages(pageCount)) { %>
                    <li class="next">
                        <a href=
                           <% paginate.href(true).next %>
                                >
                            | Next
                            <i class="fa fa-arrow-circle-right"></i>
                        </a>
                    </li>
                    <% } %>
                </ul>
                <% } %>
            </form>

            <!--<form name="paging" target="_blank" class="numDisplayItem"><span>item per page:</span><ul>
                    <a href="#"><li>20</li></a>
                    <a href="#"><li>60</li></a>
                    <a href="#"><li>all</li></a>
                </ul></form>--></div>
        <div class=" col-md-4"></div>
        <div class="col-sm-6 col-md-4 paging">
            <form name="paging" target="_blank">
                <a href="#"> <span class="glyphicon glyphicon-triangle-right webfont pagenav-right pagenav"
                                   aria-hidden="true"></span></a>
                <ul>
                    <a href="#">
                        <li>1</li>
                    </a>
                    <a href="#">
                        <li>2</li>
                    </a>
                    <a href="#">
                        <li>3</li>
                    </a>
                    <li>...</li>
                    <a href="#">
                        <li>17</li>
                    </a>
                </ul>
                <a href="#"><span class="glyphicon glyphicon-triangle-left pagenav" aria-hidden="true"></span></a>
            </form>
        </div>


    </div>
    <div class="containerBg row">

        <% categoreis.forEach(function(category){ %>
        <div class="box-hero">


            <div class="item-hero">
                <a href="/heros/<%= category._id %>">

                    <img src="<%= category.imageUrl %>">

                    <div class="item-info-category">

                        <div class="item-name"><%= category.name %></div>
                    </div>

                </a>


            </div>

        </div>
        <% }); %>

    </div>

</article>


<div id="grid"></div>

<script>
    $(function () {
        $('#grid').kendoGrid({
            dataSource: new kendo.data.DataSource({
                transport: {
                    read: ''
                },
                parameterMap: function (options, parameters) {

                },
                pageSize: 10,
                schema: {
                    model: {
                        id: '_id',
                        fields: {
                            name: {type: "string"}
                        }
                    }
                }
            }),
            navigatable: true,
            pageable: true,
            columns: [
                {field: 'name', title: 'Name'},
            ]
        })
    });

    /*format: "{0:c}*/
</script>